#!/bin/bash
pkgver=$(wget -cqO- https://ftp.gnu.org/gnu/icecat/ | tail -n 6 | grep "[DIR]" | head -n 1 | cut -d '>' -f 7 | sed 's|/</a||g')
pkgverp=$(icecat --version | cut -d ' ' -f 3)

echo "$pkgver" > /tmp/icecat
echo "$pkgverp\n" >> /tmp/icecat

if ! [[ "$pkgver" == "$pkgverp" ]]; then
    echo "I $pkgver"
else
    echo "I OK"
fi
